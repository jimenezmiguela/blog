<%# Form_for method within an output ERB tag to set up an HTML form based on this empty object (@page) %>
<%# Provide a block to form_for. The block should take a single parameter that holds the HTML form object %>
<%= form_for(@page) do |f| %>
<div class="field">
  <%# form_for block, output a label for the name field %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>

  <div class="field">
    <%# form_for block, output a label for the name field %>
    <%= f.label :body %>
    <%= f.text_area :body %>
    </div>


    <div class="field">
      <%# form_for block, output a label for the name field %>
      <%= f.label :slug %>
      <%= f.text_field :slug %>
      </div>


<div>
  <%= f.submit %>
</div>

<% end %>
